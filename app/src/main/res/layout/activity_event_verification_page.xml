<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CDDFE1"
    tools:context=".EventVerificationPage">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15sp"
        android:layout_margin="15sp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/eventName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Event Name"
                    android:layout_marginTop="10sp"
                    android:textStyle="bold"
                    android:scaleType="centerCrop"
                    android:textSize="30sp"
                    android:textColor="#000000"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:id="@+id/card1"
                    android:layout_height="210sp"
                    app:cardCornerRadius="12sp"
                    android:layout_below="@+id/eventName"
                    android:layout_marginTop="25sp"
                    android:layout_marginRight="10sp"
                    android:layout_marginLeft="10sp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAlignment="center"
                        android:scaleType="centerCrop"
                        android:background="#000000"
                        android:padding="1sp"
                        android:id="@+id/imgView" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/dt"
                    android:layout_below="@+id/card1"
                    android:drawableLeft="@drawable/ic_date"
                    android:drawablePadding="10sp"
                    android:text="12/11/2020"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginTop="20sp"
                    android:layout_marginLeft="30sp"
                    android:textSize="18sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/time"
                    android:drawableLeft="@drawable/ic_time"
                    android:drawablePadding="10sp"
                    android:layout_marginTop="20sp"
                    android:layout_below="@+id/card1"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:text="1:30 PM"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30sp"
                    android:textSize="18sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/plc"
                    android:layout_below="@+id/dt"
                    android:layout_marginTop="20sp"
                    android:drawableLeft="@drawable/ic_place"
                    android:drawablePadding="10sp"
                    android:layout_marginLeft="30sp"
                    android:text="Mukesh Patel Auditorium"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/amt"
                    android:layout_below="@+id/plc"
                    android:layout_marginTop="20sp"
                    android:drawableLeft="@drawable/ic_rupee"
                    android:drawablePadding="10sp"
                    android:layout_marginLeft="30sp"
                    android:text="100"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/amt"
                    android:layout_below="@+id/plc"
                    android:layout_marginTop="20sp"
                    android:text=".00"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/com"
                    android:layout_below="@+id/amt"
                    android:layout_marginTop="20sp"
                    android:drawableLeft="@drawable/ic_comm"
                    android:drawablePadding="10sp"
                    android:layout_marginLeft="30sp"
                    android:text="Technical Committee MPSTME"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/com"
                    android:layout_marginLeft="30sp"
                    android:layout_marginTop="30sp"
                    android:layout_marginRight="30sp"
                    android:text="Ever felt like you wanted an edge over your competition in an oversaturated industry?  The Students' Council Technical Committee brings to you *The Hadoop Workshop*  Apache Hadoop is a collection of open-source software utilities that facilitate using a network of many computers to solve problems involving massive amounts of data and computation"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:layout_marginBottom="30sp"
                    android:textSize="18sp" />





            </RelativeLayout>

        </ScrollView>
    </androidx.cardview.widget.CardView>



</androidx.drawerlayout.widget.DrawerLayout>